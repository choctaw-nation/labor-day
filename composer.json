{
	"name": "choctaw-nation/labor-day",
	"description": "a custom wp theme for Choctaw Nation's labor day site",
	"type": "project",
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs wp-content/themes/labor-day/ --extensions=php --ignore=wp-content/themes/labor-day/dist/",
		"phpcbf": "phpcbf wp-content/themes/labor-day/ --extensions=php --ignore=wp-content/themes/labor-day/dist/"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "*"
	}
}
