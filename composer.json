{
	"name": "choctaw-nation/labor-day",
	"description": "a custom wp theme for Choctaw Nation's labor day site",
	"type": "project",
	"repositories": [
		{
			"type": "composer",
			"url": "https://connect.advancedcustomfields.com"
		}
	],
	"scripts": {
		"lint:php": "./vendor/bin/phpcs ./wp-content/themes/labor-day/*.php --standard=WordPress --extensions=php",
		"fix:php": "./vendor/bin/phpcbf ./wp-content/themes/labor-day/*.php --standard=WordPress --extensions=php"
	},
	"require": {
		"wpengine/advanced-custom-fields-pro": "*",
		"wp-graphql/wp-graphql-acf": "^0.6.1"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^2.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"squizlabs/php_codesniffer": "*"
	}
}